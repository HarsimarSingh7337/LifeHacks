<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/_2sdp"
        app:cardMaxElevation="@dimen/_2sdp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/topic_description_image"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/clothes_menn"
                android:layout_margin="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/topic_description_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Men T-shirt "
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/ubuntu_medium"
                android:layout_margin="@dimen/_40sdp"/>

            <TextView
                android:id="@+id/topic_description_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It is a Men Tshirt. Its color is blue. Men wear it during Summer. Its stuff is classy and unique. Tshirts are comfortable than shirts. I must say that one should try this t-shirt once in lifetime. "
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/ubuntu"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>